rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    match /support_requests/{requestId}/{fileName} {
      allow write: if request.auth != null
        && request.resource.size < 50 * 1024 * 1024  // 50 MB max
        && request.resource.contentType.matches('(image/(png|jpeg)|application/pdf)');
      
      allow read: if request.auth != null;
    }
  }
}
