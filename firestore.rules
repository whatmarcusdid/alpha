rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Users collection
    match /users/{userId} {
      // Root user doc
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      // Reports subcollection
      match /reports/{reportId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
      
      // âœ… Meetings subcollection (ADD THIS)
      match /meetings/{meetingId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }

    // Booking Intakes collection
    match /bookingIntakes/{docId} {
      allow create: if true; // Anyone can create
      allow read, update, delete: if request.auth != null; // Only authenticated users can read, update, or delete
    }
    
    // Default deny
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
